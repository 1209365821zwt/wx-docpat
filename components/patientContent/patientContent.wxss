/* components/patientContent/patientContent.wxss */
.inject-record{
  display: flex;
  margin-top:40rpx;
  height: 40rpx;
  margin-left:40rpx;
}
.patientContent{
  min-height: 600rpx;
}
.inject-record .left{
  width:240rpx;
  height:4rpx;
  background:rgba(244,245,246,1);
  margin-right: 40rpx;
}
.inject-record .record{
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(187,192,195,1);
  line-height: 28rpx;
  margin-top:-8rpx;
}
.inject-record .right{
  width:240rpx;
  height:4rpx;
  background:rgba(244,245,246,1);
  margin-left: 40rpx;
}
.patient-list{
  flex: 1;
}
.patient-list .noData{
  width:100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.patient-list .noData image{
   width: 200rpx;
   height: 128rpx;
}
.patient-list .noData .noRecord{
  font-size:24rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(160,160,160,1);
  line-height:24rpx;
  margin-top: 24rpx;
}
.patient-list .list{
  width: 100%;
  margin-left: 40rpx;
  margin-top:58rpx;
}
.patient-list .list .lists{
  display: flex;
}
.patient-list .list .lists .times{
  width:108rpx;
  height:74rpx;
  font-size:24rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(37,58,82,1);
  line-height:34rpx;
  text-align: right;
}
.patient-list .list .lists .css{
  /* width:2rpx; */
  margin:0 30rpx;
  box-sizing: border-box;
  padding-right: 30rpx;
  position: relative;
}
.patient-list .list .lists .css .top{
  width: 1rpx;
  height: 70rpx;
  background: #B7EDE5;
  margin-left: 12rpx;
  /* margin-top: 50rpx; */
}
.patient-list .list .lists .css image{
  width: 30rpx;
  height: 30rpx;
  position: absolute;
  top: 20rpx; 
  /* margin-top:-70rpx; */
}
.patient-list .list .lists .css .bottom{
  width: 1rpx;
  height: 44rpx;
  background: #B7EDE5;
  margin-left: 12rpx;
  /* margin-top:-15rpx; */
}
.patient-list .list .lists .cell{
  width:454rpx;
  height:70rpx;
  line-height: 70rpx;
  background:rgba(244,245,246,1);
  display: flex;
  position: relative;
}
.patient-list .list .lists .cell .icons{
  width: 0rpx;
  height: 0rpx;
  border-width: 20rpx;
  border-style: solid;
  border-color: transparent rgba(244,245,246,1) transparent transparent;
  position: absolute;
  left:-40rpx;
  top:15rpx;
}
.patient-list .list .lists .cell .left{
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(37,58,82,1);
  margin-left: 40rpx;
  margin-right: 14rpx;
}
.patient-list .list .lists .cell .center{
  flex:1;
}
.patient-list .list .lists .cell .center .sure{
  width:88rpx;
  height:32rpx;
  border-radius:6rpx;
  border:1px solid rgba(187,192,195,1);
  color: #BBC0C3;
  padding: 2rpx 8rpx;
}
.patient-list .list .lists .cell .center .blue{
  width:88rpx;
  height:32rpx;
  border-radius:6rpx;
  border:1px solid #0465F8;
  color: #0465F8;
  padding: 2rpx 8rpx;
}
.patient-list .list .lists .cell .center .outime{
  width:88rpx;
  height:32rpx;
  border-radius:6rpx;
  border:1px solid #FF4500;
  color: #FF4500;
  padding: 2rpx 8rpx;
}

.patient-list .list .lists .cell .center .waitinject{
  width:88rpx;
  height:32rpx;
  border-radius:6rpx;
  border:1px solid #20C5AD;
  color: #20C5AD;
  padding: 2rpx 8rpx;
}
.patient-list .list .lists .cell .right{
  width: 16rpx;
  height: 28rpx;
  margin-right: 20rpx;
  color: #BBC0C3;
}
.patientContent .noMore{
  width: 100%;
  height: 70rpx;
  padding: 10px 0;
  text-align: center;
  color: #000;
  font-size: 30rpx;
  background: white;
  margin-top: 1rpx;
  opacity: 0.5;
}
.dialog .close{
    width: 100%;
    text-align: right;
    margin-top:30rpx;
    margin-bottom: 30rpx;
    color: #ccc;
}
.dialog .close text{
  width: 40rpx;
  height: 40rpx;
  padding-right: 30rpx;
  padding-bottom: 30rpx;
}
.dialog .text{
  /* display: flex; */
  width: 100%;
  text-align: center;
