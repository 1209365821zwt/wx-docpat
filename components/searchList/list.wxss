/* components/searchList/list.wxss */
.list{
  width: 100%;
  height: 100%;
  background: #fff;
}
.list .main-list {
  height: 168rpx;
  width: 100%;
  display: flex;
  border-bottom: 1rpx solid #F4F5F6;
}
.list .main-list .left{
  padding: 40rpx 30rpx;
}
.list .main-list  .left image{
  width: 88rpx;
  height: 88rpx;
  border-radius: 50%;
}
.list .main-list .right{
  flex: 1;
  margin-top: 40rpx;
}
.list .main-list  .right .rightop{
  display: flex;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
}
.list .main-list  .right .rightbottom .hcipart{
  width: 350rpx;
  height: 28rpx;
  font-size:28rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(37,58,82,1);
  line-height:28rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-line-clamp:1;
  -webkit-box-orient:vertical;
  margin-top: -12rpx;
}
.list .main-list  .right .rightop .part{
  font-size:32rpx;
  font-family:PingFangSC-Semibold,PingFang SC;
  font-weight:600;
  color:rgba(37,58,82,1);
  line-height:1rpx;
  padding-right: 16rpx;
  margin-bottom: 20rpx;
}
.list .main-list  .right .rightop .name{
  font-size:32rpx;
